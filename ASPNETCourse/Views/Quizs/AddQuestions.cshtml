@using ASPNETCourse.Models
@model AddQuestionsView
@{
    ViewBag.Title = "Add questions to '" + ViewBag.Name + "' quiz";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Please, select questions below, you want to include in the quiz</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.QuizId)

        @Html.EditorFor(model => model.QuestionsList)
        
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
